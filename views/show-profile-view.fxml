<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiex1.controller.ProfileController">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Imaginea de profil -->
        <StackPane alignment="TOP_LEFT">
            <ImageView fx:id="profileImageView" fitHeight="150" fitWidth="150" preserveRatio="true" styleClass="circular-image">
                <image>
                </image>
            </ImageView>
        </StackPane>

        <!-- Detalii despre utilizator -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="userNameLabel" styleClass="label-title">
            <font>
               <Font size="33.0" />
            </font></Label>
            <Label fx:id="friendsCountLabel" styleClass="label-secondary">
            <font>
               <Font size="34.0" />
            </font></Label>

            <!-- Descriere -->
            <VBox alignment="CENTER" styleClass="description-box" />
        </VBox>

        <!-- Butoane -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10px 0 0 0;" />
    </VBox>
      <Button layoutX="545.0" layoutY="480.0" onAction="#handleChangeProfileAction" prefHeight="73.0" prefWidth="138.0" styleClass="button button-photo" text="Change Profile" />
       <Label fx:id="descriptionLabel" layoutX="24.0" layoutY="399.0" prefHeight="49.0" prefWidth="577.0" wrapText="true">
      <font>
         <Font size="33.0" />
      </font></Label>
   <TextField fx:id="imageurlField" layoutX="140.0" layoutY="504.0" prefHeight="25.0" prefWidth="268.0" />
   <TextField fx:id="descriptionField" layoutX="140.0" layoutY="553.0" prefHeight="25.0" prefWidth="268.0" />
   <Label fx:id="ImageLabel" layoutX="24.0" layoutY="504.0" prefHeight="25.0" prefWidth="69.0" text="Image URL:" />
   <Label fx:id="DescriptionLabel" layoutX="23.0" layoutY="557.0" prefHeight="17.0" prefWidth="69.0" text="Description:" />
</AnchorPane>
